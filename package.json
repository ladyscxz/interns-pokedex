{
  "name": "pokedex",
  "version": "1.0.0",
  "description": "A Pokedex application with Express.js and layered architecture",
  "type": "module",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "start:ci": "timeout 5 node src/app.js || exit 0",
    "dev": "nodemon src/app.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --detectOpenHandles",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --ci --reporters=default",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\"",
    "lint": "eslint \"src/**/*.js\" \"tests/**/*.js\"",
    "lint:fix": "eslint \"src/**/*.js\" \"tests/**/*.js\" --fix",
    "ci": "npm run lint && npm run format:check && npm run test:ci",
    "precommit": "npm run lint && npm run format:check"
  },
  "keywords": [
    "pokedex",
    "pokemon",
    "express",
    "ejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.14.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.7.4",
    "supertest": "^6.3.3"
  }
}
